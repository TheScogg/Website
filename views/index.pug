extends navigation

block content
  //- h1= title
  //- p Welcome to #{title}

    // BODY
  .container-fluid
    // INTRO WITH PICTURE
    .row
      #intro.col-md-10.mx-auto
        .row(style='padding-top:0;')
          .col-md-8.my-auto.text-center
            h1.display-4(style='color: #ff3d00;') Aspiring Web Developer
            p.h2
              | Background in Print
              br
              | & Graphic Design
            hr.my-4
            h4(style="font-family: 'PT Sans Narrow', sans-serif;")
              | Dependable • Driven • Determined
          .col-md-4
            img#myPic.img-fluid.mx-auto.d-block(src='./images/me.jpg', alt='My Photo')

    // PORTFOLIO
    .row
      #portfolio.col-md-10.mx-auto
        .row
          .col-md-12.text-center
            div
              h1
                em My Project Portfolio
          // LIFELOGS LINK
          .col-md-5.col-11.thumbnail.mx-auto
            img.img-fluid(src="./images/lifelogs.jpg")
            .thumbnailOverlay.my-auto
              h1.display-4 lifelogs.com
              p.lead
                | Log your day to day activities to discover what makes you happy.
              a.btn.btn-success.active(href='http://lifelogs.herokuapp.com', role='button', aria-pressed='true' target="_blank") See More!
          
          // DRUM KIT
          .col-md-5.col-11.thumbnail.mx-auto
            img.img-fluid(src="./images/drumkit/Concert-Audience.jpg")
            .col-md-12.thumbnailOverlay.my-auto
              h1.display-4 Drum Kit
              p.lead
                | Make music without ever leaving the comfort of your bed or computer chair!
              a.btn.btn-success.active(href='/drumkit', role='button', aria-pressed='true' target="_blank") See More!

    // CONTACT ME
    .row
      #contact.col-md-10.mx-auto
        .row.contactRow
            .col-md-6.my-auto#contactText
                h1.display-4 Want to get in touch with me?
                h4 Please feel out the form, and I will respond ASAP.
            .col-md-6.form
              form#contactForm(action='mailto:thescogg@gmail.com', method='post', enctype='text/plain')
                .form-group
                  label(for='InputName') Name
                  input#InputName.form-control(type='text', aria-describedby='emailHelp', placeholder='Enter name' required)
                .form-group
                  label(for='InputEmail') Email address
                  input#InputEmail.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter email' required)
                .form-group
                  label(for='InputPhone') Phone number
                  input#InputPhone.form-control(type='tel', aria-describedby='emailHelp', placeholder='Enter phone number')
                .form-group
                  label(for='InputMessage') Your Message...
                  textarea#InputMessage.form-control(rows='3' required)
                button#submit.btn.btn-primary(type='submit') Submit
              .col-md-12.form-overlay
                h4 Please confirm your message...
                a#confirm.btn.btn-primary.active(role='button', aria-pressed='true' target="_blank") Confirm
                a#cancel.btn.btn-secondary.active(role='button', aria-pressed='true' target="_blank") Cancel
                  

              
              
    // FOOTER
    footer
      .row
        #footer-top.col-md-12.mx-auto
          .row
            .col-md-6.mx-auto.my-auto
              p.h2.text-center Around the World
              ul.text-center
                li
                  a(href='https://www.linkedin.com/in/thescogg' target="_blank")
                    i.fa.fa-3x.fa-linkedin-square(aria-hidden='true')
                li
                  a(href='https://github.com/TheScogg' target="_blank")
                    i.fa.fa-3x.fa-github-square(aria-hidden='true')
                li
                  a(href='mailto:thescogg@gmail.com' target="_blank")
                    i.fa.fa-3x.fa-envelope-square(aria-hidden='true')
        #footer-bottom.col-md-12.mx-auto
          p.font-weight-bold.text-center TheScogg.com © 2017 All Rights Reserved
          p
  script(src='javascripts/scripts.js')
